<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TallerGrupalMMVC.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TallerGrupalMMVC"
    xmlns:views="clr-namespace:TallerGrupalMMVC.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TallerGrupalMMVC">

    <TabBar>
        <Tab Title="Weather Models" Icon="cloud.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:WeatherView}"
                Route="WeatherView" />
        </Tab>
        <Tab Title="Notas" Icon="notes.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:NotesView}"
                Route="NotesView" />
        </Tab>
        <Tab Title="Recordatorios" Icon="reminder.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:RecordatoriosView}"
                Route="RecordatoriosView" />
        </Tab>
        <Tab Title="Acerca de" Icon="about.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:AboutView}"
                Route="AboutView" />
        </Tab>
    </TabBar>

</Shell>
