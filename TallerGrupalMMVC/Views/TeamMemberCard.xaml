<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerGrupalMMVC.Views.TeamMemberCard">

    <Frame BackgroundColor="White"
           CornerRadius="20"
           HasShadow="True"
           Margin="10"
           Padding="0">

        <Grid RowDefinitions="200,*" 
              BackgroundColor="Transparent">

            <!-- Fondo decorativo superior -->
            <Frame Grid.Row="0"
                BackgroundColor="{Binding BackgroundColor, Source={x:Reference TeamMemberCardView}}"
                CornerRadius="20"
                HasShadow="False"
                Margin="0"
                Padding="0">


                <Grid>
                    <!-- Imagen de fondo decorativa -->
                    <Ellipse Fill="#FFFFFF20"
                            WidthRequest="150"
                            HeightRequest="150"
                            HorizontalOptions="End"
                            VerticalOptions="Start"
                            Margin="-50,-50,0,0"/>

                    <Ellipse Fill="#FFFFFF10"
                            WidthRequest="100"
                            HeightRequest="100"
                            HorizontalOptions="Start"
                            VerticalOptions="End"
                            Margin="0,0,0,-30"/>

                    <!-- Foto del miembro -->
                    <Border WidthRequest="120"
                           HeightRequest="120"
                           BackgroundColor="White"
                           Stroke="White"
                           StrokeThickness="4"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="60"/>
                        </Border.StrokeShape>

                        <Image Source="{Binding PhotoPath}"
                               Aspect="AspectFill"/>
                    </Border>
                </Grid>
            </Frame>

            <!-- InformaciÃ³n del miembro -->
            <StackLayout Grid.Row="1" 
                        Padding="20"
                        Spacing="10">

                <!-- Nombre -->
                <Label Text="{Binding Name}"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       HorizontalOptions="Center"/>

                <!-- Rol (si existe) -->
                <Label Text="{Binding Role}"
                       FontSize="14"
                       FontAttributes="Italic"
                       TextColor="#7F8C8D"
                       HorizontalOptions="Center"
                       IsVisible="{Binding Role, Converter={StaticResource StringToBoolConverter}}"/>

                <!-- InformaciÃ³n -->
                <Grid ColumnDefinitions="Auto,*" 
                      RowDefinitions="Auto,Auto,Auto"
                      ColumnSpacing="10"
                      RowSpacing="8"
                      Margin="0,10,0,0">

                    <!-- Edad -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="ðŸŽ‚"
                           FontSize="18"
                           VerticalOptions="Center"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Age, StringFormat='{0} aÃ±os'}"
                           FontSize="16"
                           TextColor="#34495E"
                           VerticalOptions="Center"/>

                    <!-- Deporte favorito -->
                    <Label Grid.Row="1" Grid.Column="0"
                           Text="âš½"
                           FontSize="18"
                           VerticalOptions="Center"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding FavoriteSport}"
                           FontSize="16"
                           TextColor="#34495E"
                           VerticalOptions="Center"/>

                    <!-- DescripciÃ³n (si existe) -->
                    <Label Grid.Row="2" Grid.Column="0"
                           Text="ðŸ’­"
                           FontSize="18"
                           VerticalOptions="Start"
                           IsVisible="{Binding Description, Converter={StaticResource StringToBoolConverter}}"/>
                    <Label Grid.Row="2" Grid.Column="1"
                           Text="{Binding Description}"
                           FontSize="14"
                           TextColor="#7F8C8D"
                           LineBreakMode="WordWrap"
                           IsVisible="{Binding Description, Converter={StaticResource StringToBoolConverter}}"/>
                </Grid>
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>